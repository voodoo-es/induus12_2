<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_kit_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.kit.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="is_kit"/>
                    <label for="is_kit"/>
                </div>
            </xpath>
            <xpath expr="//page[2]" position="after">
                <page name="kit" string="Sub Products" attrs="{'invisible': [('is_kit', '=', False)]}">
                    <field name="sub_product_line_ids" nolabel="1">
                        <tree string="Sub Products lines" editable="bottom">
                            <field name="product_id" required="1"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>