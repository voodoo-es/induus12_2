<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_payment_term_line_tree_multi_day">
        <field name="name">account.payment.term.line.tree.multi.day</field>
        <field name="model">account.payment.term.line</field>
        <field name="inherit_id" ref="account.view_payment_term_line_tree"/>
        <field name="arch" type="xml">
            <field name="days" position="after">
                <field name="payment_days"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_payment_term_line_form_multi_day">
        <field name="name">account.payment.term.line.form.multi.day</field>
        <field name="model">account.payment.term.line</field>
        <field name="inherit_id" ref="account.view_payment_term_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group[2]" position="inside">
                <label for="payment_days" attrs="{'invisible': [('option', 'in', ['last_day_following_month', 'last_day_current_month'])]}"/>
                <div>
                    <div class="o_row" attrs="{'invisible': [('option', 'in', ['last_day_following_month', 'last_day_current_month'])]}">
                        <field name="payment_days"/>
                        days
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
